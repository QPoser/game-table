{% extends 'base.html.twig' %}

{% block title %}Rooms{% endblock %}

{% block body %}
    <a class="btn btn-primary" href="{{ path('app.rooms.create') }}">Create room</a>
    <table class="table">
        <thead>
        <tr>
            <th class="col">#</th>
            <th class="col">Room</th>
            <th class="col">Players</th>
            <th class="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for room in rooms %}
            <tr>
                <td>{{ room.id }}</td>
                <td>{{ room.title }}</td>
                <td><span class="badge badge-primary">{{ room.roomPlayersCount }} / {{ room.slots }}</span></td>
                <td class="d-flex">
                    {% if room.hasUser(app.user, true) %}
                        <a href="{{ path('app.rooms.room.visit', {'id' : room.id}) }}" class="ml-auto"><button class="btn btn-primary">Enter</button></a>

                        <form action="{{ path('app.rooms.room.leave', {'id' : room.id}) }}" class="ml-3" method="post">
                            <button class="btn btn-warning">Leave</button>
                        </form>
                    {% else %}
                        <form action="{{ path('app.rooms.room.join', {'id' : room.id}) }}" method="post">
                            <button class="btn btn-success">Join</button>
                        </form>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
